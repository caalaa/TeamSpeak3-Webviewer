<?xml version="1.0"?>
<config>
    <!-- Information -->
    <info>
        <author>Max Rath and Maximilian Narr</author>
        <homepage>http://devmx.de</homepage>
        
        <!-- Don't change anything here -->
        <!-- Ändern Sie hier nichts! -->
        <abstract>false</abstract>
    </info>
    
    <!-- Enter here the values you want have shown in the info-dialog. Order them as you want to have them shown -->
    <!-- Geben Sie hier die Werte ein, die Sie im Infodialog anzeigen lassen möchten. Ordnen Sie sie nach der gewünschten Reihenfolge
        Values/ Werte:
        -nickname
        -country
        -version
        -connections
        -servergroup
        -channelgroup
        -description
    -->
    <show_html_for_client>nickname,country,version,connections,servergroup,channelgroup,description</show_html_for_client>
    
    <!-- If true the dialog will close if the mouse is out of the dialog, else you have to close them manually -->
    <!-- Wenn true, schließt sich der Dialog wenn die Maus von Client geht, sonst muss er automatisch geschlossen werden -->
    <close_by_mouseout>true</close_by_mouseout>
    
    <!-- width of the dialog in pixels, if none standard will be used -->
    <!-- Breite des Dialoges in Pixeln, wenn Sie none setzen, wird der Standardwert verwendet -->
    <width>none</width>
    
    <!-- height of the dialog in pixels, if none standard will be used -->
    <!-- Höhe des Dialoges in Pixeln, wenn Sie none setzen, wird der Standardwert verwendet -->
    <height>none</height>
</config>

        